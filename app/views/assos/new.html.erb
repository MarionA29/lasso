<div class="container col-md-8 order-md-1">
<%= form_tag url_for(action: 'create'),multipart: true, method: "post" do %>

<div class="form-group">
    <%= label_tag 'Nom de ton asso :' %>
    <%= text_field_tag 'name', @asso.name, class: "form-control", placeholder:"Entre 3 et 14 caractères" %>
    <br />
</div>
<div class="form-group">
    <%= label_tag 'Description de ton association :' %>
    <%= text_area_tag 'description', @asso.description, class: "form-control"  %>
    <br />
</div>
<div class="form-group">
    <%= label_tag 'Tes chiffres clés' %>
    <%= text_area_tag 'key_figures', @asso.key_figures, class: "form-control" %>
    <br />
</div><div class="form-group">
    <%= label_tag 'Les infos pratiques :' %>
    <%= text_field_tag 'infos', @asso.infos, class: "form-control" %>
    <br />

    <h3>Ajouter des photos :</h3>

<%= file_field_tag :picture %>


</div>
<%= submit_tag "Créer ton association", class: "btn btn-primary" %>
</div>

<% end %>
<br />
<% if @asso.errors.any? %>
<p>Nous n'avons pas réussi à créer l'event pour la (ou les) raison(s) suivante(s) :</p>
<ul>
<% @asso.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>
<% end %>
