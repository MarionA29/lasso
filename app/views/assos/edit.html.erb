

        <div class="container col-md-8 order-md-1" style="background:white; padding:20px">
        <h1>Modifier mon asso</h1>
        <%= form_for @asso do |f| %>
        <div class="form-group">
            <label>Nom de ton asso</label>
            <%= f.text_field :name, class: "form-control", value: @asso.name %>
            <br />
        </div>
        <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description, class: "form-control", value: @asso.description %>
            <br />
          </div>
          <div class="form-group">
            <label>Chiffres-clés</label>
            <%= f.text_area :key_figures, class: "form-control", value: @asso.key_figures %>
            <br />
          </div>
          <div class="form-group">
            <label>Informations</label>
            <%= f.text_area :infos, class: "form-control", value: @asso.infos %>
            <br />
          </div>
          <div class="form-group">
            <label>Adresse</label>
            <%= f.text_field :address, class: "form-control",id:"address-input", value: @asso.address %>
            <br />
          </div>
          <div class="carousel" style="width:280px;height:190px;">
          <div id="<%=@asso.name%>" class="carousel slide" style="margin-left:15px; margin-right:15px;" data-ride="carousel" >
            <div class="carousel-inner">
              <div class="carousel-item active">
                <% if @asso.picture1.attached? == true %>
                <%= image_tag resize(@asso.picture1) %>
                <% end %>
              </div>
              <div class="carousel-item">
                <% if @asso.picture2.attached? == true %>
                <%= image_tag  resize(@asso.picture2) %>
                <% end %>
              </div>
              <div class="carousel-item">
                <% if @asso.picture3.attached? == true %>
                <%= image_tag resize(@asso.picture3) %>
                <% end %>
              </div>
            </div>
            <a class="carousel-control-prev" href= "#<%=@asso.name%>" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#<%=@asso.name%>" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          </div>
        </br>
