<style>

  .row
  {
    display: flex;
    justify-content: center;
    justify-content: space-between;


  }
  .flex-container {
    display: flex;
    justify-content: center;
    justify-content: space-between;
    margin: 15px;
    margin-top:5px;
  }

  .btn {
    border-radius:0px;
  }
  .card{
    width:20rem;
    border-style:solid;
  }
  .card-body
  {
    padding:0rem;
  }

  .card-text
  {
    margin-left:15px;
    margin-right:15px;
  }

  .btn-default
  {
    padding: 3px;
  }

  .d-block {
    width: 20rem;
    height: 15rem;
  }


</style>

<div class="card" >
  <div class="card-body">
    <h4 class="card-text"><%=asso.name%></h4>
    <p class="card-text" >Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <div class="carousel">
    <div id="<%=asso.name%>" class="carousel slide" style="margin-left:15px; margin-right:15px;" data-ride="carousel" >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <% if asso.picture1.attached? == true %>
          <%= image_tag resize(asso.picture1) %>
          <% end %>
        </div>
        <div class="carousel-item">
          <% if asso.picture2.attached? == true %>
          <%= image_tag  resize(asso.picture2) %>
          <% end %>
        </div>
        <div class="carousel-item">
          <% if asso.picture3.attached? == true %>
          <%= image_tag resize(asso.picture3) %>
          <% end %>
        </div>

      </div>
      <a class="carousel-control-prev" href="#<%=asso.name%>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#<%=asso.name%>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    </div>

    <div class="flex-container">

      <button type="button" class="btn btn-default" data-container="body" data-original-title="chiffres cles" data-toggle="popover" data-placement="top" data-content="<%=asso.key_figures%>">
        On top
      </button>
      <button type="button" class="btn btn-default" data-container="body" data-original-title="information de base" data-toggle="popover" data-placement="top" data-content="<%=asso.infos%>">
        On top
      </button>
      <button type="button" class="btn btn-default" data-container="body" data-original-title="adresse" data-toggle="popover" data-placement="top" data-content="<%=asso.address%>">
        On top
      </button>
      <button type="button" class="btn btn-default" data-container="body" data-original-title="Popover on Top" data-toggle="popover" data-placement="top" data-content="hello">
        On top
      </button>
      <button type="button" class="btn btn-default" data-container="body" data-original-title="Popover on Top" data-toggle="popover" data-placement="top" data-content="Here will be some very useful information about his popover.">
        On top
      </button>
      <button type="button" class="btn btn-default" data-container="body" data-original-title="Popover on Top" data-toggle="popover" data-placement="top" data-content="Here will be some very useful information about his popover.">
        On top
      </button>

    </div>
  </div>
</div>

<script type="text/javascript">
  $('.carousel').carousel({
  interval: false
});
</script>
