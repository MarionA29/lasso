
<div class="card asso" >
  <div class="card-body asso">

<h4 class="card-text"style="margin-top: 15px";><%= link_to asso.name, asso_path(asso.id) %></h4>
    <p class="card-text"  style="height: 81px;"><%= asso.address %></p>
    <div class="carousel" style="height: 190px;">
    <div id="<%=asso.name%>" class="carousel slide" style="margin-left:15px; margin-right:15px;" data-ride="carousel" >
      <div class="carousel-inner" style="width: 280px;">
        <div class="carousel-item active">
          <% if asso.picture1.attached? == true %>
          <%= image_tag resize(asso.picture1) %>
          <% else %>
          <%= image_tag 'default.jpg' %>
          <% end %>
        </div>
        <div class="carousel-item">
          <% if asso.picture2.attached? == true %>
          <%= image_tag  resize(asso.picture2) %>
          <%else%>
          <%= image_tag 'default.jpg' %>
          <% end %>
        </div>
        <div class="carousel-item">
          <% if asso.picture3.attached? == true %>
          <%= image_tag resize(asso.picture3) %>
          <% else %>
          <%= image_tag 'default.jpg' %>
          <% end %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#<%=asso.name%>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#<%=asso.name%>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    </div>
    <div class="flex-container asso">

      <button type="button" class="btn btn-info" data-container="body"  data-trigger="hover click" data-original-title="DESCRIPTION" data-toggle="popover" data-placement="top" data-content="<%=asso.description%>">
        <i class="fas fa-home fa"></i>
      </button>
      <button type="button" class="btn btn-info" data-container="body" data-trigger="hover click"  data-original-title="SERVICES" data-toggle="popover" data-placement="top" data-content="<%=asso.infos%>">
        <i class="fas fa-user-cog"></i>
      </button>
      <button type="button" class="btn btn-warning" data-container="body" data-trigger="hover click"  data-original-title="NEWS" data-toggle="popover" data-placement="top" data-content="<% if news.where(asso_id: asso.id).first != nil %><b><%= news.where(asso_id: asso.id).first.title %></b><br /><br /><%= news.where(asso_id: asso.id).first.content%><% end %>"data-html="true">
        <i class="far fa-newspaper"></i>
      </button>
      <button type="button" class="btn btn-info" data-container="body" data-trigger="hover click" data-original-title="INFOS PRATIQUES" data-toggle="popover" data-placement="top" data-content="<%=asso.infos%>">
        <i class="fas fa-info-circle"></i>
      </button>
      <button type="button" class="btn btn-info" data-container="body" data-trigger="hover click" data-original-title="CHIFFRES CLES" data-toggle="popover" data-placement="top" data-content="<%=asso.key_figures%>">
        <i class="fas fa-address-card"></i>
      </button>
      <button type="button" class="btn btn-info" data-container="body" data-trigger="hover click" data-original-title="SITE WEB" data-toggle="popover" data-placement="top" data-content="<%=asso.address%>">
        <i class="fas fa-location-arrow"></i>
      </button>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.carousel').carousel({
  interval: false
});
</script>
