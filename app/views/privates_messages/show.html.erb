<% i=0 %>
<% while (@conversation_recipient.length > i || @conversation_sender.length > i)  %>
<% if  @conversation_sender[i] != nil  %>
<a class="pull-left" href="#pablo">
  <div class="avatar">
    <%if @sender.profile_pic.attached? == true%>
    <%= image_tag @sender.avatar %>
    <% end %>
  </div>
</a>
<div class="media-body">
  <h5 class="media-heading"><%=  @sender.first_name  %> </h5>

  <p> <%=  @conversation_sender[i].content  %></p>
<% end  %>


 <% if  @conversation_recipient[i] != nil %>

<a class="pull-left" style="text-align: right;">
  <div class="avatar">
    <%if @sender.profile_pic.attached? == true%>
    <%= image_tag @recipient.avatar %>
    <% end %>  </div>



<div class="media-body">
  <h5 class="media-heading"> <%=  @recipient.first_name  %> </h5>

  <p>  <%=  @conversation_recipient[i].content %></p>
</a>
<% end %>
<% i+=1 %>
 <% end  %>
