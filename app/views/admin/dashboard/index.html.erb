<div class="container">
    <table class="table">
      <h3>Associations à valider</h3>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nom</th>
          <th scope="col">Description</th>
          <th scope="col">Chiffres clés</th>
          <th scope="col">Infos pratiques</th>
          <th scope="col">Adresse</th>
          <th scope="col">Validate</th>
        </tr>
      </thead>
      <% @asso_validate.each do |asso| %>
      <tbody>
        <tr>
          <th scope="row"><%= link_to asso.id, admin_validation_path(asso.id) %></th>
          <td><%= asso.name %></td>
          <td><%= asso.description %></td>
          <td><%= asso.key_figures %></td>
          <td><%= asso.infos %></td>
          <td><%= asso.address %></td>
          <td><%= asso.validated %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <hr>
    <br>
<table class="table">
  <h3>Toutes les associations</h3>

  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Description</th>
      <th scope="col">Chiffres clés</th>
      <th scope="col">Infos pratiques</th>
      <th scope="col">Adresse</th>
      <th scope="col">Validate</th>
    </tr>
  </thead>
  <% @asso.each do |asso| %>
  <tbody>
    <tr>
      <th scope="row"><%= asso.id %></th>
      <td><%= asso.name %></td>
      <td><%= asso.description %></td>
      <td><%= asso.key_figures %></td>
      <td><%= asso.infos %></td>
      <td><%= asso.address %></td>
      <td><%= asso.validated %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<hr>
<br>
<table class="table">
  <h3>Les utilisateurs</h3>
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Photo de Profil</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Description</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <% @user.each do |user| %>
    <tbody>
      <tr>
        <th scope="row"><%= user.id %></th>

        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.description %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Modifier", edit_admin_user_path(user.id) %></td>
        <td><a style="color: red;" href="<%= user_path(user.id)%>" data-confirm= "Êtes-vous sûr(e) de vouloir supprimer cet user ?" data-method="DELETE">Supprimer</a></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
