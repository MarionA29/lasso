<body class="login-page sidebar-collapse">


<div class="page-header header-filter">
        <div class="page-header-image mid shaded" style="background-image:url(https://images.unsplash.com/photo-1523325343676-4136d25d013b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80); filter: grayscale(80%) brightness(70%)"></div>
        <div class="content">
            <div class="container">
                <div class="col-md-5 ml-auto mr-auto">
                    <div class="card card-login card-plain">

                          <%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>

                            <div class="card-body">
                              <div class="input-group no-border input-lg">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="fa fa-at" style="color:gray"></i></span>
                                </div>

                                <%= f.email_field :email, :type => "text", :class => "form-control", placeholder: "Email..."%>

                              </div>
                              <div class="input-group no-border input-lg">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="fa fa-key" style="color:gray"></i></span>
                                </div>
                                <%= f.password_field :password, :class => "form-control", placeholder: "Mot de passe..."%>
                              </div>
                            </div>
                          </br>

                            <div class="actions card-footer text-center">
                                <%= f.submit "Se connecter", :class => "btn btn-warning btn-round btn-lg btn-block"%>
                            </div>


                            <% end %>
                            <%= render "devise/shared/links" %>


                    </div>
                </div>
            </div>
        </div>
    </div>
  </body>
