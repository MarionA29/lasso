<div class="container">
    <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
            <h2 class="title"><%= assos.find(@new.asso_id).name %></h2>

            <br />
          <div class="card card-plain card-blog">
              <div class="card-image">
                  <a href="#pablo">
                      <img class="img img-raised rounded" src="assets/img/examples/card-blog13.jpg" />
                  </a>
              </div>

              <h6 class="category text-info">News</h6>

              <h3 class="card-title">
                  <%= @new.title %>
              </h3>

              <h5 class="card-description">
                <%= @new.content %>
              </h5>
              <% if new_match %>
              <a href="#pablo" class="btn btn-primary btn-round">Read More</a>
              <% end %>
          </div>
</div>
</div>
</div>
